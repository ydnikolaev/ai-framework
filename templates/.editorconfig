# EditorConfig — AI-Framework
# https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Go files
[*.go]
indent_style = tab
indent_size = 4

# Makefile requires tabs
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

# Markdown — preserve trailing whitespace (line breaks)
[*.md]
trim_trailing_whitespace = false

# YAML
[*.{yml,yaml}]
indent_size = 2

# JSON
[*.json]
indent_size = 2
